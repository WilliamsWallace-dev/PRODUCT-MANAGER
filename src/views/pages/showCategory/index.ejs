<%- include('../../layouts/header') %>
<%- include('../../layouts/menu') %>
<section class="section">
    <div class="container">
      <div class="columns">
        <div class="column is-four-fifths">
          <h1 class="title size-4"><%= category.name%></h1>
        </div>
        <div class="column is-one-fifth">
          <a href="/category/<%=category.id%>/product/new" class="button is-success is-small">Novo Produto</a>
          <a href="/showCategories" class="button is-small">Voltar</a>
        </div>
      </div>
      <% if(category.products.length > 0 ) {%> 
        <table class="table is-fullwidth">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Qtd em Estoque</th>
              <th>Preço Unitário</th>
              <th>Receita Total</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody>

          <% category.products.forEach((product)=>{%>
            <tr>
              <td><%= product.name %></td>
              <td><%= product.amount %></td>
              <td><%= product.price %></td>
              <td style="color: green;">R$ <%= product.amount * product.price %></td>
              <td>
                <a href="/product/<%= product.category_id %>/<%= product.id %>?_method=delete" class="button is-danger is-small">Remover</a>
                <a href="/product/edit/<%= product.id %>" class="button is-success is-small">Editar</a>
              </td>
            </tr>
            <%})%>
          </tbody>
      </table>
      <%}else { %>
      <p>Nenhum produto cadatrado</p>
      <% } %>

    </div>
  </section>
<%- include('../../layouts/footer')%>

