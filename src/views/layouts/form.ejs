<form method = "post" action="<%= url %>"
    <div class="field">
        <label for="name">Nome</label>
        <div class="control" style="margin: 8px 0 ;">
            <% if(type == "category") { %>
                <input type="text" class="input" name = "category[name]" placeholder="Categoria de produtos" value = <%=category.name%> >
            <% } else { %> 
                    <input type="text" class="input" name = "product[name]" placeholder="Nome do Produto"  value = <%=product.name%> >
                <%}%>
        </div>
        
        <% if(type == "product") { %>
            <label for="product[amount]">Quantidade de produtos</label>
            <div class="control" style="margin-bottom: 8px ;">
                <input style="margin-top: 8px ; max-width: 80px;" type="number" min= 0 class="input" name = "product[amount]" placeholder="-" value = <%=product.amount%> >
            </div>
            <label for="product[price]">Preço Unitário</label>
            <div class="control" style="margin-bottom: 8px ;">
                <input style="margin-top: 8px ; max-width: 80px;" type="number" step= 0.01 min= 0 class="input" name = "product[price]" placeholder="-" value = <%=product.price%> >
            </div>
        <% } %>
        
        <% if (error) { %>
            <p class="is-danger help"><%= error.message %></p>
        <%}%>   
        
        <button type="submit" class="button is-success">Salvar</button>
        <% if(type == "category") { %>
        <a href="/showCategories" class="button">Cancelar</a>
        <% } else { %>
            <a href="/category/show/<%= product.category_id %>" class="button">Cancelar</a>
            <%}%> 
    </div>
</form>